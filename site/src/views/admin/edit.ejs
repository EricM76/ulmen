<!DOCTYPE html>
<html lang="en">
<!-- HEAD -->
<%-include('./partials/head')%>
<!-- HEADER -->

<body class="edit">
    <%-include('./partials/header')%>

    <main>
        <form class="formularios" action="/admin/edit/<%= product.id %>?_method=PUT" method="POST">
            <div class="form-floating">
                <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea"></textarea>
                <label for="floatingTextarea">Nombre del producto: <i><%= product.name%></i></label>
            </div>

            <div class="form-floating">
                <select class="form-select" id="floatingSelect" aria-label="Floating label select example" name="color" id="color">
                    <option selected><%= product.color%></option>
                    <option value="Rojo">Rojo</option>
                    <option value="Azul">Azul</option>
                    <option value="Verde">Verde</option>
                    <option value="Negro">Negro</option>
                    <option value="Blanco">Blanco</option>
                    <option value="Gris">Gris</option>
                </select>
                <label for="floatingSelect">Color</label>
            </div>

            <div class="form-floating">
                <label for="floatingSelect">Talle <%= product.talle%></label>
                <textarea name="Talle" class="form-control" placeholder="Leave a comment here" id="floatingTextarea"></textarea>
                
                
            </div>
            

            <div class="form-floating">
                <select class="form-select" id="floatingSelect" aria-label="Floating label select example" name="genero" id="genero">
                    <option selected><%= product.genero%></option>
                    <option value="Mujer">Hombre</option>
                    <option value="Hombre">Mujer</option>
                    <option value="Niños">Niños</option>
                    <option value="Niñas">Niñas</option>
                    <option value="Unisex">Unisex</option>
                </select>
                <label for="floatingSelect">Genero</label>
            </div>

            <div class="form-floating">
                <select class="form-select" id="floatingSelect" aria-label="Floating label select example" name="coleccion" id='coleccion'>
                    <option selected><%= product.coleccion%></option>
                    <option value="invierno">Invierno</option>
                    <option value="verano">Verano</option>
                    <option value="primavera">Primavera</option>
                    <option value="otoño">Otoño</option>
                </select>
                <label for="floatingSelect">Coleccion</label>
            </div>

            <div class="form-floating">
                <select class="form-select" id="floatingSelect" aria-label="Floating label select example" name="estado" id="estado">
                    <option selected><%=product.estado%></option>
                    <option value="en venta">En venta</option>
                    <option value="agotado">Agotado</option>
                </select>
                <label for="floatingSelect">Estado</label>
            </div>

            <div class="input-group mb-3">
                
                <input name="precio" type="text" value="<%= product.precio%>" class="form-control" aria-label="Amount (to the nearest dollar)">
                <span class="input-group-text">$</span>
            </div>

            <div class="mb-3">
                <label for="formFile" class="form-label"></label>
                <input class="form-control" type="file" id="formFile">
              </div>
              <div class="botones">
                <button type="submit" class="enviar">Editar</button>
            </div>
        </form>
        

    </main>

    <%-include('./partials/footer')%>
</body>

</html>