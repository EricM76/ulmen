<!DOCTYPE html>
<html lang="en">
<!-- HEAD -->
<%-include('./partials/head')%>
<!-- HEADER -->

<body class="create">
    <%-include('./partials/header')%>

    <main>
        <form class="formularios" action="/admin/create" method="POST">
            <div class="form-floating">
                <textarea name ="name"class="form-control" placeholder="Leave a comment here" id="floatingTextarea"></textarea>
                <label for="floatingTextarea">Nombre del producto</label>
            </div>

            <div class="form-floating">
                <select class="form-select" id="floatingSelect" aria-label="Floating label select example" name="color" id="color">
                    <option selected>Selecciona un color</option>
                    <option value="Blanco">Blanco</option>
                    <option value="Negro">Negro</option>
                    <option value="Gris">Gris</option>
                    <option value="Rojo">Rojo</option>
                    <option value="Azul">Azul</option>
                    <option value="Verde">Verde</option>
                </select>
                <label for="floatingSelect">Color</label>
            </div>

            <div class="form-floating">
                <textarea name="talle" class="form-control" placeholder="Leave a comment here" id="floatingTextarea"></textarea>
                <label for="floatingTextarea">Talle</label>
            </div>

            <div class="form-floating">
                <textarea name="descripcion" class="form-control" placeholder="Leave a comment here" id="floatingTextarea"></textarea>
                <label for="floatingTextarea">Descripcion</label>
            </div>

            <div class="form-floating">
                <select class="form-select" id="floatingSelect" aria-label="Floating label select example" name="genero" id="genero">
                    <option selected>Selecciona el genero</option>
                    <option value="mujer">Mujer</option>
                    <option value="hombre">Hombre</option>
                    <option value="Niños">Niños</option>
                    <option value="Niñas">Niñas</option>
                    <option value="Unisex">Unisex</option>
                </select>
                <label for="floatingSelect">Genero</label>
            </div>

            <div class="form-floating">
                <select class="form-select" id="floatingSelect" aria-label="Floating label select example" name="coleccion" id="coleccion">
                    <option selected>Selecciona la coleccion</option>
                    <option value="invierno">invierno</option>
                    <option value="primavera">primavera</option>
                    <option value="verano">verano</option>
                    <option value="otoño">otoño</option>
                </select>
                <label for="floatingSelect">Coleccion</label>
            </div>

            <div class="form-floating">
                <select class="form-select" id="floatingSelect" aria-label="Floating label select example" name="estado" id="estado">
                    <option selected>Selecciona el estado del producto</option>
                    <option value="en venta">En venta</option>
                    <option value="agotado">Agotado</option>
                </select>
                <label for="floatingSelect">Estado</label>
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text">$</span>
                <input name="precio" type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
                <span class="input-group-text">.00</span>
            </div>

            <div class="botones">
                <label for="image" class="enviar">Subir imagen</label>
                <input class="form-control" type="file" name="image" id="image" hidden multiple accept="image/*">
              </div>
        
        <div class="botones">
            <button class="enviar" type="submit">Agregar</button>
        </div>
    </form>
    </main>

    <%-include('./partials/footer')%>
</body>

</html>